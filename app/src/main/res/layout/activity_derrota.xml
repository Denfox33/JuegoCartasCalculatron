<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    android:background="@drawable/inicio">-->


    <ImageView
        android:id="@+id/fondoD"
        android:layout_width="712dp"
        android:layout_height="873dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/winin" />

    <ImageView
        android:id="@+id/derrota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/derrota"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="113dp" />

    <Button
        android:id="@+id/reinicarV"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/guiaV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/botona"
        android:text="Reiniciar"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/VolverV"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/reinicarV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/botona"
        android:text="Volver"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>