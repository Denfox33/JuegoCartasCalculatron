<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/winin"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/Victory"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="450dp"
        android:layout_height="450dp"
        app:srcCompat="@drawable/victory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/reinicarV"
        android:layout_width="150dp"
        android:layout_height="80dp"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/botona"
        android:onClick="reiniciarPartida"

        android:text="Reiniciar"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/VolverV"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/reinicarV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/botona"
        android:onClick="volverAlMain"
        android:text="Volver"
        android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>